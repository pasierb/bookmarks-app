<%= form_for bookmark, html: { class: 'form-horizontal' } do |f| %>
  <%- if bookmark.errors.present? %>
    <p class="text-danger"><%= bookmark.errors.full_messages.join(", ") %></p>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :url, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :url, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :short, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :short, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :tagline, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :tagline, class: 'form-control' %>
      <p class="help-block"><%=t :tagline_help, scope: 'pages.bookmarks' %></p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>

<% end %>
