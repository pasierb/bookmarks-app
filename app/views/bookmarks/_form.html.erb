<%= form_for bookmark do |f| %>
  <%- if bookmark.errors.present? %>
    <p class="text-danger"><%= bookmark.errors.full_messages.join(", ") %></p>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :short %>
    <%= f.text_field :short, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :tagline %>
    <%= f.text_field :tagline, class: 'form-control' %>
    <p class="help-block"><%=t :tagline_help, scope: 'pages.bookmarks' %></p>
  </div>


  <%= f.submit class: 'btn btn-primary' %>
<% end %>
